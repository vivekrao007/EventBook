<body style="background-color:gainsboro;">
    <div id="sessionDiv" data-id="@Session["eventid"]"></div>
    <br />
    <br />
    <br />
    <br />
    <center>
        <div class="card text-center mb-3  col-lg-6 " style="background-color:moccasin;">
            <div class="card-header" style="background-color:moccasin;" id="category">

            </div>
            <div class="card-block">
                <h4 class="card-title" id="EventName"></h4>
                <p class="card-text" id="venue"></p>
                <p class="card-text" id="date"></p>

